{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "chrispuh/lawn-management",
    "version": "0.1.0-alpha.1",
    "type": "project",
    "description": "A comprehensive lawn care management application for tracking, monitoring, and maintaining healthy lawns and gardens.",
    "keywords": [
        "lawn-care",
        "garden-management",
        "agricultural-tools",
        "lawn-tracking",
        "garden-maintenance"
    ],
    "homepage": "https://github.com/ChrisPuh/lawn-management",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/ChrisPuh/lawn-management/issues",
        "source": "https://github.com/ChrisPuh/lawn-management"
    },
    "require": {
        "php": "^8.4",
        "filament/filament": "^3.2.130",
        "filament/forms": "^3.2.130",
        "filament/notifications": "^3.2.130",
        "filament/tables": "^3.2.130",
        "laravel/breeze": "^2.3.3",
        "laravel/framework": "^11.41.3",
        "laravel/tinker": "^2.10.1",
        "livewire/livewire": "^3.5.19",
        "spatie/laravel-cookie-consent": "^3.3.2"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.5.4",
        "brianium/paratest": "^7.7",
        "enlightn/security-checker": "^2.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.0.2",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.20",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.6.1",
        "pestphp/pest": "^3.7.4",
        "pestphp/pest-plugin-laravel": "^3.1",
        "pestphp/pest-plugin-livewire": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2.3",
        "rector/rector": "^2.0.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "docker compose up -d"
        ],
        "analyse": [
            "docker compose exec -T laravel.test php -d memory_limit=-1 ./vendor/bin/phpstan analyse --configuration=phpstan.neon"
        ],
        "pest": [
            "docker compose exec -T laravel.test php vendor/bin/pest"
        ],
        "lint": [
            "docker compose exec -T laravel.test php ./vendor/bin/pint"
        ],
        "refactor": [
            "docker compose exec -T laravel.test php ./vendor/bin/rector"
        ],
        "test:lint": [
            "docker compose exec -T laravel.test php ./vendor/bin/pint --test"
        ],
        "test:refector": [
            "docker compose exec -T laravel.test php ./vendor/bin/rector --dry-run"
        ],
        "test:coverage": [
            "docker compose exec -T laravel.test php -d memory_limit=-1 vendor/bin/pest --parallel --coverage --exactly=79.6"
        ],
        "test:coverage-html": [
            "docker compose exec -T laravel.test php -d memory_limit=-1 vendor/bin/pest --coverage-html coverage --parallel"
        ],
        "type-coverage": [
            "docker compose exec -T laravel.test php -d memory_limit=-1 vendor/bin/pest --type-coverage --min=97.5"
        ],
        "test:type-coverage": [
            "docker compose exec -T laravel.test php -d memory_limit=-1 vendor/bin/pest --type-coverage --min=97.5"
        ],
        "test:parallel": [
            "docker compose exec -T laravel.test php vendor/bin/pest --parallel"
        ],
        "test:php-stan": "@analyse",
        "test": [
            "@test:refector",
            "@test:lint",
            "@test:type-coverage",
            "@test:php-stan",
            "@test:coverage"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
